@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

@{
  Layout = "_Layout";
}

@Html.ActionLink("Home |", "Index", "Home")
@Html.ActionLink("Stylists | ", "Index", "Stylists")
@Html.ActionLink("Clients", "Index", "Clients")

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
} 

@foreach (Client client in Model)
{
  <h2>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</h2>
}

<h3>@Html.ActionLink("Add new Client", "Create")</h3>
