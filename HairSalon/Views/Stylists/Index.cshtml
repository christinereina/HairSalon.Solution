@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

@{
  Layout = "_Layout";
}

@Html.ActionLink("Home |", "Index", "Home")
@Html.ActionLink("Stylists | ", "Index", "Stylists")
@Html.ActionLink("Clients", "Index", "Clients")


<h1>Stylists</h1>
<img src="~/img/animal.jpg">
@if (@Model.Count == 0)
{
  <h2>No stylists have been added yet!!</h2>
} 

@foreach (Stylist stylist in Model)
{
<h2>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</h2>
}

<h3>@Html.ActionLink("Add new Stylist", "Create")</h3>

