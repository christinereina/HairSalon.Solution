@using HairSalon.Models;
@model HairSalon.Models.Stylist;
  
@{
  Layout = "_Layout";
}

@Html.ActionLink("Home |", "Index", "Home")
@Html.ActionLink("Stylists | ", "Index", "Stylists")
@Html.ActionLink("Clients", "Index", "Clients")

<h1>Stylist Details</h1>
<hr />
<h2>@Html.DisplayFor(model => model.Name)</h2>
<h3>@Html.DisplayNameFor(model => model.ServicesOffered): @Html.DisplayFor(model => model.ServicesOffered)</h3>


@if (@Model.Clients.Count == 0)
{
  <h3>No Clients found just yet!</h3>
}

<h2>Clients</h2>
@foreach (Client client in @Model.Clients)
{
  <h3>@client.Name</h3>
}
<h3>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</h3>
<h3>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</h3>
<h3>@Html.ActionLink("Back to Stylists", "Index")</h3>