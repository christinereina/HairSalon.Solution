@model HairSalon.Models.Stylist
  
@{
  Layout = "_Layout";
}

@Html.ActionLink("Home |", "Index", "Home")
@Html.ActionLink("Stylists | ", "Index", "Stylists")
@Html.ActionLink("Clients", "Index", "Clients")

<h2>Add a new Stylist</h2>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)<br>
    @Html.TextBoxFor(model => model.Name)<br>
    @Html.LabelFor(model => model.ServicesOffered)<br>
    @Html.TextBoxFor(model => model.ServicesOffered)<br><br>
    <input type="submit" value="Add new Stylist" />
}
<h3>@Html.ActionLink("Show all Stylists", "Index")</h3>